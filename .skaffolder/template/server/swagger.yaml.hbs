        _id:
          type: string{{#each _entity._attrs}}
        {{name}}:
          type: {{toSwaggerType type}}{{/each}}
      required:
        -  _id{{#each _entity._attrs}}{{#equal required true}}
        - {{name}}{{/equal}}{{/each}}
      
    {{/each}}{{/each}}
